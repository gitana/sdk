<script>
    function trigger(event) {
        window.top.postMessage(event, "*");
    };

    $(document).ready(function() {

        $(".btn-delete").off().click(function(e) {
            e.preventDefault();
            trigger({
                "type": "delete"
            });
        });

        $(".btn-cancel").off().click(function(e) {
            e.preventDefault();
            trigger({
                "type": "cancel"
            });
        });
    });

</script>

<div>

    Are you sure you want to delete this product?

