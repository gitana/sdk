
<script>
    function trigger(event) {
        window.top.postMessage(event, "*");
    };

    $(document).ready(function() {

        $("form").submit(function(e) {
            e.preventDefault();

            trigger({
                "type": "update",
                "data": $(this).serializeArray()
            });
        });

        $(".btn-cancel").off().click(function(e) {
            e.preventDefault();
            trigger({
                "type": "cancel"
            });
        });
    });

</script>

<div class="form">
    <form action="/none">
        <div class="form-group">
            <label for="title">Title</label>
            <input type="text" class="form-control" name="title" id="title" placeholder="Product Title" value="{{node.title}}">
        </div>
        <div class="form-group">
            <label for="sku">SKU</label>
            <input type="number" class="form-control" name="sku" placeholder="Product SKU" value="{{node.sku}}">
        </div>

        <div class="radio">
          <label>
            <input type="radio" name="size" value="small" {{#is node.size "small"}}checked{{/is}}>
            Small
          </label>
        </div>
        <div class="radio">
          <label>
            <input type="radio" name="size" value="medium" {{#is node.size "medium"}}checked{{/is}}>
            Medium
          </label>
        </div>
        <div class="radio">
          <label>
            <input type="radio" name="size" value="large" {{#is node.size "large"}}checked{{/is}}>
            Large
          </label>
        </div>

        <br/>
        <br/>

        <div class="pull-left">
            <button class="btn btn-danger btn-cancel">Cancel</button>
        </div>
        <div class="pull-right">
            <button class="btn btn-primary" type="submit">Save</button>
        </div>

        <div class="clear:both"></div>
    </form>

</div>